<?xml version="1.0" encoding="utf-8"?>
    <ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/peanutkieve"/>


    <TextView
        android:id="@+id/tving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="#f54141"
        android:textColor="#faf9f9"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#1e1e1e"
        android:padding="5dp"
        android:text="Peanut Butter 2 tbsp
\n\nCoconut Milk ½ cup
\n\nGinger Paste 1tsp
\n\nSoya Sauce 1tsp
\n\nFish Sauce 1tsp
\n\nHoney 1tsp
\n\nLemon Juice 1tbsp
\n\nChili Powder ½ tsp
\n\nChicken Breast 2
\n\nEgg 1
\n\nFlour as required
\n\nBread Crumbs as required
"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Method:"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="#f54141"
        android:textColor="#faf9f9"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#1e1e1e"
        android:padding="10dp"
        android:text="1. In a bowl add peanut butter, ginger paste,coconut milk, soya sauce, fish sauce,honey,lemon juice, Chillipowder mix well..
\n\n2.cut the chicken breast from the middle to make a pocket and filled the peanut butter mixture in it, then coat in flour then dip in egg and then coat in bread crumbs.
\n\n3. Shallow fry till golden and then bake 180c for 10 minutes. Serve hot
\n\n4. (After making peanut butter mixture refrigerate for 20 minutes or until hard) "/>
</LinearLayout>
</ScrollView>
